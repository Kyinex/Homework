#include <iostream>
#include <Windows.h>
#define _USE_MATH_DEFINES
#include <cmath>
#define M_PI 3.14159265358979323846
using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    cout << "Объем и полная поверзность усечённого конуса" << endl;
    while (true) {
        double R, r, l, h;
        cout  << "Введите радиус нижнего основания (R) : ";
        void proverka(char& R); {
            while (!(cin >> R) || cin.get() != '\n')
            {
                cout << "Введите радиус нижнего основания (R) : ";
                cin.clear();
                cin.ignore(32767, '\n');
            }
        }
        cout  << "Введите радиус верхнего основания (r) : ";
        void proverka(double& r); {
            while (!(cin >> r) || cin.get() != '\n')
            {
                cout << "Введите радиус верхнего основания (r) : ";
                cin.clear();
                cin.ignore(32767, '\n');
            }
        }
        cout << "Введите высоту конуса (h) : ";
        void proverka(double& h); {
            while (!(cin >> h) || cin.get() != '\n')
            {
                cout  << "Введите высоту конуса (h) : ";
                cin.clear();
                cin.ignore(32767, '\n');
            }
        }
        cout  << "Введите образующую конуса (l) : ";
        void proverka(double& l); {
            while (!(cin >> l) || cin.get() != '\n')
            {
                cout << "Введите образующую конуса (l) : ";
                cin.clear();
                cin.ignore(32767, '\n');
            }
        }
        if (R <= 0 || r <= 0 || h <= 0 || l <= 0) {
            cout << endl << "Введены неверные данные. Повторный ввод" << endl << endl;
            continue;
        }
        cout << endl << "Объём = " << (M_PI * h * ((R * R) + (R * r) + (r * r))) / 3 << endl;
        cout << endl << "Полная поверхность = " << M_PI * (R * R + (R + r) * l + r * r) << endl << endl << endl;
    }
}
