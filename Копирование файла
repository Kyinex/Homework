#include <iostream>
#include <Windows.h>
#include <fstream>
#include <string>
using namespace std;
bool PrintFile(string filename);
int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    string name;
    string s;
    cout << "Название файла : \t";
    cin >> name;
    name = name + ".txt";
    cout << "Текст: \t";
    cin >> s;
    ofstream fout(name);
    fout << s;
    PrintFile(name);
    system("pause");

}
